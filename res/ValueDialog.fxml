<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.*?>
<?import java.lang.*?>
<?import java.util.*?>
<?import javafx.scene.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>


<fx:root styleClass="gradient-bg" stylesheets="@GraphProgram.css" type="BorderPane" xmlns="http://javafx.com/javafx/8" xmlns:fx="http://javafx.com/fxml/1">
   <top>
      <Label fx:id="label" stylesheets="@GraphProgram.css" text="Enter a starting value" BorderPane.alignment="TOP_LEFT">
         <BorderPane.margin>
            <Insets bottom="6.0" left="6.0" right="6.0" top="6.0" />
         </BorderPane.margin>
      </Label>
   </top>
   <center>
      <TextField fx:id="valueField" minWidth="200.0" BorderPane.alignment="CENTER">
         <BorderPane.margin>
            <Insets bottom="6.0" left="6.0" right="6.0" top="6.0" />
         </BorderPane.margin>
      </TextField>
   </center>
   <bottom>
      <Button fx:id="confirmBttn" minWidth="60.0" mnemonicParsing="false" onAction="#onConfirm" text="OK" BorderPane.alignment="CENTER">
         <BorderPane.margin>
            <Insets bottom="6.0" left="6.0" right="6.0" top="6.0" />
         </BorderPane.margin>
      </Button>
   </bottom>
</fx:root>
